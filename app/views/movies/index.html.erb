<%#= render "shared/header" %>

<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to image_tag("movie-logo.png", class:"movie-icon"), "/" %>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='キーワードから探す'>
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    </form>
  </div>
  <div class='nav'>
    <ul class='lists-left'><li>
      <li><%= link_to 'レビューを投稿する', "#", class: "movie-list" %></li>
      <li><%= link_to 'カテゴリー', "#", class: "category-list" %></li>
    </ul>
    <ul class='lists-right'>

      <% if user_signed_in? %>
        <li><%= link_to current_user.nickname, "#", class: "user-nickname" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li> 
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>

    </ul>
  </div>
</header>


<div class='main'>

  <%# 画面上部の「あなたが映画の評価をしよう」帯部分 %>
  <div class='title-contents'>
    <h2 class='service-title'>
      あなたが映画の評価をしよう
    </h2>
    <p class='service-explain'>
      MOVARITEはあなた自身が映画の評価をできる 映画レビューアプリです
    </p>
    
  </div>
  <%# /画面上部の「あなたが映画の評価をしよう」帯部分  %>

  <%# 評価一覧 %>
  <div class='movie-contents'>
    <h2 class='title'>評価が高い映画</h2>
    <div class="subtitle" >
      新規レビュー映画
    </div>
    

  </div>
  <%# /評価一覧 %>
</div>

<%#= render "shared/footer" %>

<div class='footer'>
  <div class='footer-contents'>
    <div class='movie-details'>
      <h2 class='footer-content-head'>MOVARITEを見る</h2>
      <ul>
        <li><%= link_to 'カテゴリー一覧', "#", class: "footer-link" %></li>
      </ul>
    </div>
    <div class='movie-details'>
      <h2 class='footer-content-head'>MOVARITEについて</h2>
      <ul>
        <li><%= link_to 'お知らせ', "#", class: "footer-link" %></li>
      </ul>
    </div>
  </div>
  <%#= link_to image_tag("furima-logo-white.png", class:"logo-white"), "#" %>
  <p>© MOVARITE</p>
</div>